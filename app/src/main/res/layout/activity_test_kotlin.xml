<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff00ff"
    android:paddingHorizontal="16dp"
    tools:context=".activity.TestKotlinActivity">

    <TextView
        android:id="@+id/txtTestKotlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kotlin test "
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnStart"
        android:layout_marginTop="8dp"
        android:background="@drawable/card_round_top_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始" />

    <Button
        android:id="@+id/btnEnd"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/card_square_white"
        android:text="结束" />

    <Button
        android:id="@+id/btnTest1"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/card_round_bottom_white"
        android:text="不带包名" />

    <Button
        android:id="@+id/btnTest2"
        android:layout_marginTop="8dp"
        android:background="@drawable/card_round_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不带keyCode" />

    <Button
        android:layout_marginTop="8dp"
        android:id="@+id/btnTest3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="带keyCode" />



</LinearLayout>