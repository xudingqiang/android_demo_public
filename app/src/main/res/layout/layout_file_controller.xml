<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="44dp"
    android:background="#c7F7F7F7"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="256dp"
        android:layout_height="match_parent"
        android:background="@color/bg_main"
        android:gravity="center|left"
        android:paddingLeft="32dp"
        android:text="111"
        android:textSize="14sp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        />


    <ImageView
        android:id="@+id/imgLeft"
        android:layout_toRightOf="@id/txtTitle"
        android:layout_width="wrap_content"
        android:src="@drawable/icon_left"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imgRight"
        android:layout_toRightOf="@id/imgLeft"
        android:layout_width="wrap_content"
        android:src="@drawable/icon_right"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imgSort"
        android:src="@drawable/icon_sort"
        android:layout_width="16dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toLeftOf="@id/imgShowHide"
        android:layout_marginRight="20dp"
        android:layout_height="16dp"/>

    <ImageView
        android:id="@+id/imgShowHide"
        android:src="@drawable/icon_show_file"
        android:layout_width="16dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toLeftOf="@id/imgAllSelected"
        android:layout_marginRight="20dp"
        android:layout_height="16dp"/>

    <ImageView
        android:id="@+id/imgAllSelected"
        android:src="@drawable/icon_all_selected"
        android:layout_width="16dp"
        android:layout_toLeftOf="@id/imgSwitch"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:layout_height="16dp"/>

    <ImageView
        android:id="@+id/imgSwitch"
        android:layout_width="16dp"
        android:layout_toLeftOf="@id/editSearch"
        android:src="@drawable/icon_grid"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_height="16dp"/>


    <EditText
        android:id="@+id/editSearch"
        android:layout_width="200dp"
        android:hint="@string/search"
        android:textSize="10sp"
        android:layout_centerVertical="true"
        android:focusable="true"
        android:layout_toLeftOf="@id/ViewLine"
        android:focusableInTouchMode="true"
        android:layout_gravity="center"
        android:shadowDy="4"
        android:shadowColor="#33000000"
        android:background="@drawable/bg_grep_ellipse"
        android:paddingHorizontal="8dp"
        android:layout_height="24dp"/>

    <View
        android:id="@+id/ViewLine"
        android:layout_width="1dp"
        android:layout_marginHorizontal="14dp"
        android:background="#D8D8D8"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/imgFullscreen"
        android:layout_height="18dp"/>


    <ImageView
        android:id="@+id/imgFullscreen"
        android:layout_gravity="center_vertical|end"
        android:src="@drawable/icon_fullscreen"
        android:duplicateParentState="true"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/imgMinimize"
        android:layout_width="wrap_content"/>

    <ImageView
        android:id="@+id/imgMinimize"
        android:layout_gravity="center_vertical|end"
        android:src="@drawable/icon_minimize"
        android:duplicateParentState="true"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/imgMaximize"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"/>

    <ImageView
        android:id="@+id/imgMaximize"
        android:layout_gravity="center_vertical|end"
        android:src="@drawable/icon_maximize"
        android:duplicateParentState="true"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/imgClose"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"/>

    <ImageView
        android:id="@+id/imgClose"
        android:src="@drawable/icon_close"
        android:duplicateParentState="true"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"/>


</RelativeLayout>