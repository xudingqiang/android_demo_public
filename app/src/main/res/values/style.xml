<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textStyle">
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <style name="TransparentActivityTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DialogActivityTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowMinWidthMajor">1dp</item>
        <item name="android:windowMinWidthMinor">1dp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CalendarTheme.WithActionBarWallpaper" parent="CalendarTheme.WithoutActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/bg_desktop_menu</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:itemBackground">@color/black</item>
    </style>

    <style name="MyPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <!-- 背景 -->
        <item name="android:popupBackground">@drawable/bg_desktop_menu</item>
        <!-- 文本颜色 -->
        <item name="android:textColor">#FF0000</item>
        <!-- 文本大小 -->
        <item name="android:textSize">10sp</item>

        <!-- 垂直偏移（距离锚点的位置） -->
        <item name="android:dropDownVerticalOffset">0dp</item>
        <item name="android:dropDownHorizontalOffset">-234dp</item>
        <item name="android:dropDownListViewStyle">@style/PopmenuDivier</item>
    </style>

    <style name="PopmenuDivier">
        <item name="android:divider">@color/white</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="popWindowTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#e6000000</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <style name="popWindowLineStyle">
        <item name="android:background">#1a000000</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">130dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">15dp</item>
    </style>

    <style name="CustomSwitchMaterialStyle" parent="Widget.Material3.CompoundButton.Switch">
        <!-- 开启时的轨道颜色 -->
        <item name="colorControlActivated">#ff318BF3</item>
        <!-- 关闭时的轨道颜色 -->
        <item name="android:colorForeground">#29000000</item>
        <!-- 关闭时的滑块颜色 -->
        <item name="colorSwitchThumbNormal">#FFF</item>
    </style>


    <style name="green_btn_style" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textColor">#fff</item>

        <item name="android:background">@drawable/selector_btn_blue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">48dp</item>
        <item name="android:layout_marginRight">48dp</item>
    </style>


    <style name="RoundedAlertDialog"  parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="dialogCornerRadius">8dp</item>
        <item name="android:background">#f2f2f2</item>

    </style>

    <style name="item_child_title" >
        <item name="android:fontFamily">@font/alibaba_puhui_65_medium_65_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff1A1A1A</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="item_child_summary" >
        <item name="android:fontFamily">@font/alibaba_puhui_55_regular_55_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#991A1A1A</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="item_child_value" >
        <item name="android:fontFamily">@font/alibaba_puhui_65_medium_65_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:singleLine">true</item>
    </style>


    <!-- res/values/styles.xml -->
    <style name="MySwitchCompatStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <!-- 轨道 -->
        <item name="track">@color/white</item>
        <item name="thumbColor">@color/blue</item>
        <!-- 滑块 -->
        <!-- 最小宽度 -->
        <item name="switchMinWidth">48dp</item>
        <!-- thumb 到 track 的间距 -->
        <item name="thumbTextPadding">0dp</item>
        <!-- 是否显示文字 -->
        <item name="showText">false</item>
        <!-- 内边距 -->
        <item name="android:padding">0dp</item>
    </style>

    <style name="Theme.Recorder.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="dialogCornerRadius">16dp</item>
    </style>

    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <item name="android:windowLightNavigationBar">?attr/isLightTheme</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="materialAlertDialogTheme">@style/Theme.Recorder.AlertDialog</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="alertDialogTheme">@style/Theme.Recorder.AlertDialog</item>

    </style>

    <style name="AppTheme.DialogActivity">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>

    </style>

</resources>