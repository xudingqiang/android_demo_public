<!-- res/drawable/spinner_popup_shadow.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影层 -->
    <item android:top="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#f2f2f2" /> <!-- 阴影颜色 -->
            <corners android:radius="8dp" />    <!-- 圆角与弹窗一致 -->
        </shape>
    </item>

    <!-- 弹窗内容层 -->
    <item android:bottom="1dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#fff" /> <!-- 背景色 -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>